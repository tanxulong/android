<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tanxulong.androidlayout.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000" >

        <Button
            android:id="@+id/toastBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="28dp"
            android:text="Show Toast" />

        <Button
            android:id="@+id/notificationBtn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/toastBtn"
            android:layout_below="@+id/toastBtn"
            android:layout_marginTop="38dp"
            android:text="Notification" />

        <Button
            android:id="@+id/notificationBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/toastBtn"
            android:layout_centerVertical="true"
            android:text="Big Notification" />

    </RelativeLayout>

</FrameLayout>